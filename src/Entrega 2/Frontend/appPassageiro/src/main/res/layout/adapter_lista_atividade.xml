<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/icon_carro" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textRua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_TextRua"
            android:textColor="@color/VerdeEscuro"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Data e Horas juntos -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/textData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_TextData"
                android:textColor="#9D1D591B"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textHorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="#9D1D591B"
                android:text="@string/app_TextHora"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
