<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_backgound_branco"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textNumeracaoRota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_TextRua"
            android:textColor="@color/VerdeEscuro"
            android:layout_marginStart="4dp"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textRua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_TextRua"
            android:textColor="@color/Preto"
            android:layout_marginStart="4dp"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="start">

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/starBarAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="0"
                android:stepSize="1"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:isIndicator="true"
                android:focusable="false"
                android:progressTint="@color/VerdeEscuro"/>
        </LinearLayout>

        <!-- Título da seção de avaliações -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avaliações"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- Container para a lista de avaliações -->
        <LinearLayout
            android:id="@+id/avaliacoesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Os itens de avaliação serão adicionados aqui dinamicamente -->

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
